{
  "name": "nbk",
  "version": "0.1.8",
  "description": "Nodebook - Multi-Language REPL with web UI",
  "main": "src/backend/index.js",
  "scripts": {
    "test": "mocha test/backend",
    "dev": "concurrently --kill-others \"npm run dev-frontend\" \"npm run dev-backend -- $PARAMS\"",
    "dev-frontend": "parcel watch src/frontend/*.html",
    "dev-backend": "nodemon --watch src/backend src/backend",
    "prebuild": "rm -Rf dist/*.js dist/*.css dist/*.map",
    "build": "npm test && npm run prebuild && parcel build src/frontend/*.html",
    "electron": "electron ./src/backend/electron.js"
  },
  "author": "@netgusto",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "codemirror": "^5.40.0",
    "dockerode": "^2.5.6",
    "express": "^4.16.3",
    "globby": "^8.0.1",
    "minimist": "^1.2.0",
    "project-name-generator": "^2.1.5",
    "recursive-copy": "^2.0.9",
    "title-case": "^2.1.1",
    "tree-kill": "^1.2.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.0",
    "classnames": "^2.2.6",
    "concurrently": "^4.0.1",
    "electron": "^2.0.9",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "parcel-bundler": "^1.9.7",
    "portfinder": "^1.0.17",
    "preact": "^8.3.1",
    "preact-compat": "^3.18.4",
    "react": "^16.4.2",
    "react-codemirror2": "^5.1.0",
    "react-dom": "^16.4.2",
    "react-spinkit": "^3.0.0",
    "typescript": "^3.0.3"
  },
  "alias": {
    "react": "preact-compat",
    "react-dom": "preact-compat"
  },
  "bin": {
    "nbk": "bin/nbk"
  }
}
